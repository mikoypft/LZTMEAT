<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Skip actual files
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]

    # Skip actual directories
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Skip /backend (don't rewrite backend dir requests)
    RewriteRule ^backend/ - [L]

    # Route /api through backend public directory
    RewriteRule ^api(/|$) - [L]
    RewriteCond %{REQUEST_URI} ^/api
    RewriteRule ^(.*)$ /backend/public/index.php [L]

    # Default: Route everything else to SPA
    RewriteRule ^(.*)$ /dist/index.html [L]
</IfModule>

AddType application/javascript js

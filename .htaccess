<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Skip actual files
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]

    # Skip actual directories
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Skip /backend and /setup.php (don't rewrite these)
    RewriteRule ^(backend|setup\.php|debug\.php) - [L]

    # Default: Route everything else to SPA frontend
    RewriteRule ^(.*)$ /dist/index.html [L]
</IfModule>


<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Don't rewrite dist/assets - these are real files
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]

    # Don't rewrite real directories
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Route /api/* to Laravel backend
    RewriteCond %{REQUEST_URI} ^/api(/|$)
    RewriteRule ^api/(.*)$ backend/public/index.php [L,QSA,E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Route /backend/* to Laravel
    RewriteCond %{REQUEST_URI} ^/backend(/|$)
    RewriteCond %{REQUEST_URI} !^/backend/setup\.php$
    RewriteRule ^backend/(.*)$ backend/public/index.php [L,QSA,E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # SPA fallback - serve dist/index.html for all other requests
    RewriteCond %{REQUEST_URI} !^/api(/|$)
    RewriteCond %{REQUEST_URI} !^/backend(/|$)
    RewriteCond %{REQUEST_URI} !^/setup\.php$
    RewriteRule ^(.*)$ dist/index.html [L]
</IfModule>

# Set correct MIME types
<IfModule mod_mime.c>
    AddType application/javascript js
    AddType text/css css
    AddEncoding gzip svg
</IfModule>

# Enable compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript application/json application/octet-stream
</IfModule>

# Cache control for static assets
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Images
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # CSS and JavaScript
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/octet-stream "access plus 1 month"
    
    # Fonts
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/ttf "access plus 1 year"
    
    # HTML (no cache)
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# Security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>



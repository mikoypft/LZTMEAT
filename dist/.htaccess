<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /dist/

    # Let real files be served
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]

    # Let real directories be served
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Serve index.html for all other requests
    RewriteRule ^ index.html [L]
</IfModule>
